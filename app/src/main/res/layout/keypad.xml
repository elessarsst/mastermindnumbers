<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick A 4 Digit Number"
        android:textAlignment="center"
        android:textColor="#FF5F5F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/userNumberIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="XXXX"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3">

        <TextView
            android:id="@+id/numberKey1"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="1"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey2"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="2"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey3"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey4"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="4"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey5"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="5"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey6"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="6"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey7"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="7"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey8"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="8"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey9"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="9"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/clearKey"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="C"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/numberKey0"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="0"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/backSpaceKey"
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="-"
            android:textSize="40sp" />
    </GridLayout>

    <TextView
        android:id="@+id/startKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="#ffaa11"
        android:paddingStart="40sp"
        android:paddingTop="20sp"
        android:paddingEnd="40sp"
        android:paddingBottom="20sp"
        android:text="SUBMIT"
        android:textSize="20sp" />
</LinearLayout>