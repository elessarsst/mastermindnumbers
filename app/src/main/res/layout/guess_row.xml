<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="10sp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/guessRowPlayerKey1"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="-" />

    <Space
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/guessRowPlayerKey2"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="-" />

    <Space
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/guessRowPlayerKey3"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="-" />

    <Space
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/guessRowPlayerKey4"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="-" />
    <Space
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/guessRowPlayerWhiteHint"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:background="#ffffff"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="3sp"
        android:text="-" />
    <Space
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/guessRowPlayerRedHint"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeMaxTextSize="16sp"
        android:background="#ff0000"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="3sp"
        android:text="-" />
</LinearLayout>