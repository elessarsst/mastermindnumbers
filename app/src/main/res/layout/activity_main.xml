<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MasterMind With Numbers"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:text="by Selim Serhat Türkman" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FF5F5F"
            android:text="Pick A 4 Digit Number To Start" />

        <TextView
            android:id="@+id/userNumberIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textSize="30sp"
            android:text="XXXX" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3">

            <TextView
                android:id="@+id/key1"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="1"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key2"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="2"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key3"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="3"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key4"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="4"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key5"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="5"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key6"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="6"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/key7"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:text="7" />

            <TextView
                android:id="@+id/key8"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:text="8" />

            <TextView
                android:id="@+id/key9"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:text="9" />

            <TextView
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:onClick="resetArray"
                android:text="C" />

            <TextView
                android:id="@+id/key0"
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:text="0" />

            <TextView
                android:layout_width="50sp"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="40sp"
                android:onClick="backSpaceNumber"
                android:text="-" />
        </GridLayout>

        <TextView
            android:id="@+id/startKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="#ffaa11"
            android:paddingStart="40sp"
            android:paddingTop="20sp"
            android:paddingEnd="40sp"
            android:paddingBottom="20sp"
            android:onClick="startGame"
            android:textSize="20sp"
            android:text="START" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="5sp"
        android:paddingBottom="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Lover "
            android:textColor="#444750" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serhat Türkman"
            android:textColor="#0D1833" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>